<?xml version="1.0" encoding="utf-8"?>
<Container>
  <Beta>False</Beta>
  <Category>NetworkServices:Other</Category>
  <Date>2020-03-06</Date>
  <Changes></Changes>
  <Name>bastion</Name>
  <Support>https://github.com/MarshallOfSound/unraid-templates/issues</Support>
  <Description></Description>
  <Project>https://github.com/MarshallOfSound/unraid-templates</Project>
  <Registry>https://hub.docker.com/r/cloudposse/bastion</Registry>
  <Repository>cloudposse/bastion</Repository>
  <Network>bridge</Network>
  <Privileged>false</Privileged>
  <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort>5225</HostPort>
        <ContainerPort>22</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Data>
    <Volume>
      <HostDir>/mnt/cache/appdata/gak/home</HostDir>
      <ContainerDir>/home</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/cache/appdata/gak/etc/init.d/ssh-authorized-keys-command</HostDir>
      <ContainerDir>/etc/init.d/ssh-authorized-keys-command</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/cache/appdata/gak/etc/init.d/ssh-api-url</HostDir>
      <ContainerDir>/etc/init.d/ssh-api-url</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/cache/appdata/gak/etc/init.d/ssh-log-level</HostDir>
      <ContainerDir>/etc/init.d/ssh-log-level</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>
  <Environment>
    <Variable>
      <Name>API_URL</Name>
      <Value>http://gak:301/user/%s/authorized_keys</Value>
    </Variable>
    <Variable>
      <Name>MFA_PROVIDER</Name>
      <Value>google-authenticator</Value>
    </Variable>
    <Variable>
      <Name>SLACK_ENABLED</Name>
      <Value>false</Value>
    </Variable>
    <Variable>
      <Name>SSH_AUTHORIZED_KEYS_COMMAND</Name>
      <Value>/usr/bin/github-authorized-keys</Value>
    </Variable>
    <Variable>
      <Name>SSH_AUTHORIZED_KEYS_COMMAND_USER</Name>
      <Value>root</Value>
    </Variable>
    <Variable>
      <Name>LOGLEVEL</Name>
      <Value>DEBUG</Value>
    </Variable>
  </Environment>
  <Icon>https://icons.iconarchive.com/icons/chanut/role-playing/1024/Castle-icon.png</Icon>
  <ExtraParams>--mount source=gak-etc,target=/etc</ExtraParams>
</Container>
